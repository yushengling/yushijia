<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_goods_list_big"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fifty_dp">

    <ImageView
        android:id="@id/iv_goods_list_img"
        android:layout_width="fill_parent"
        android:layout_height="284.0dip"
        android:contentDescription="@string/IMAGE"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@id/tv_goods_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/twenty_dp"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/fifteen_sp" />

    <TextView
        android:id="@id/tv_goods_list_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:textColor="@color/gray_aa"
        android:textSize="@dimen/ten_sp" />

    <View
        android:layout_width="@dimen/one_hundred_and_eighty_five_dp"
        android:layout_height="0.5dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/gray_light_f7f0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_five_dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_goods_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="@dimen/fifteen_sp" />

        <TextView
            android:id="@id/tv_goods_list_full_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:textColor="@color/gray_aa"
            android:textSize="@dimen/twelve_sp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/one_hundred_and_eighty_five_dp"
        android:layout_height="0.5dip"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_light_f7f0" />

    <TextView
        android:id="@id/tv_goods_list_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:includeFontPadding="false"
        android:textColor="@color/gray_aa"
        android:textSize="@dimen/ten_sp" />
</LinearLayout>