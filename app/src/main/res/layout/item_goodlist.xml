<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sancks_click_lv"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/good_snacks_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <TextView
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/good_snacks_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#241717"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        />
        <TextView
            android:id="@+id/good_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#241717"
        android:textSize="10sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/marpaice_tv"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ccb625"
            />
        <TextView
            android:id="@+id/good_price_tv"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ccb625"
            />
    </LinearLayout>
    <TextView
        android:paddingTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/slaes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>