<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<RelativeLayout
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp">
    <ImageView
        android:id="@+id/title_back_iv"
        android:src="@drawable/ic_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/snack_good_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/shopping_basket_iv"
        android:src="@drawable/ic_bottom_shopping_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>

    <include layout="@layout/discover_divider_layout"/>

    <LinearLayout
        android:background="#b2b89bb8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/all_tv"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="全部"
            />
         <TextView
             android:id="@+id/sales_tv"
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="30dp"
            android:text="销量"
            />
         <TextView
             android:id="@+id/price_tv"
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
            android:layout_height="30dp"
            android:text="价格"
            />
         <TextView
             android:id="@+id/time_tv"
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
            android:layout_height="30dp"
            android:text="时间"
            />
        <ImageView
            android:id="@+id/change_iv"
            android:src="@drawable/ic_big_pic"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/all_snacks__pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>