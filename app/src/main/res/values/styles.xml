<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status Bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation Bar -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <declare-styleable name="LinTab">
        <attr name="iv_res" format="reference"/>
        <attr name="tv_str" format="string"/>
    </declare-styleable>

    <style name="tv_color28_size28">
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_shopping_cart_num">
        <item name="android:textSize">6.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_oval_red_d4_size10</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ten_dp</item>
        <item name="android:layout_marginTop">3.0dip</item>
        <item name="android:layout_marginRight">7.0dip</item>
        <item name="android:minWidth">@dimen/ten_dp</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#b000</item>
    </style>


    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_style</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="style_frg_title_bar_title">
        <item name="android:textSize">@dimen/fifteen_sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">200.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="et_login_input">
        <item name="android:textSize">@dimen/size_login_phone_text</item>
        <item name="android:textColor">@color/gray_dark_4c</item>
        <item name="android:textColorHint">@color/gray_dark_4c</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>
